{
  "name": "inno-store",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "run-p install:api install:webui",
    "install:api": "cd inno-store-api && npm i",
    "install:webui": "cd inno-store-webui && npm i",
    "start:api": "cd inno-store-api && npm run start:dev",
    "start:webui:client": "cd inno-store-webui && npm run serve:client",
    "start:webui:ssr": "cd inno-store-webui && npm run dev:ssr",
    "build": "run-p build:api build:webui",
    "build:api": "cd inno-store-api && npm run build",
    "build:webui": "cd inno-store-webui && npm run build",
    "graphql:api": "cd inno-store-api && npm run graphql",
    "graphql:webui": "cd inno-store-webui && npm run graphql",
    "lint": "run-s lint:api lint:webui",
    "lint:api": "cd inno-store-api && npm run lint",
    "lint:webui": "cd inno-store-webui && npm run lint",
    "prettier": "prettier --write --ignore-path .gitignore \"**/*.+(js|ts|html|css|json)\""
  },
  "devDependencies": {
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
